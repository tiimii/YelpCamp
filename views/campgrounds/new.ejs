<body>
    <div class="container text-center">
        <div class="row my-4">
            <div class="col">
                <h1>New Campground</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="title" class="form-label">Name</label>
                        <input type="text" id="title" name="campground[title]" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" name="campground[location]" class="form-control">
                    </div>
                    <button class="btn btn-primary">Add Campground</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form action="/campgrounds">
                    <button class="btn btn-primary my-2">Show All Campgrounds</button>
                </form>
            </div>
        </div>
    </div>
</body>
