<% layout('layouts/boilerplate') %> 
<div class="container text-center">
    <div class="row my-4">
        <div class="col">
            <h1>Edit Campground</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title" class="form-label">Name</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %> ">
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %> ">
                </div>
                <button class="btn btn-primary mt-4 mb-2">Confirm</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <form action="/campgrounds">
                <div class="form-group">
                    <button class="btn btn-primary my-2">Back to Campgrounds</button>
                </div>
            </form>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>